<div>
    <h1>Sign up</h1>
</div>

<div>
  <div>

    
<%= form_with(model: @user, local: true) do |f| %>

      
      <div>
        
<%= f.label :name, 'Name' %>

        
<%= f.text_field :name %>

      </div>

      <div>
        
<%= f.label :email, 'Email' %>

        
<%= f.email_field :email %>

      </div>

      <div>
        
<%= f.label :password, 'Password' %>

        
<%= f.password_field :password %>

      </div>

      <div>
        
<%= f.label :password_confirmation, 'Confirmation' %>

        
<%= f.password_field :password_confirmation %>

      </div>

      
<%= f.submit 'Sign up' %>

    
<% end %>

<%= link_to 'login now!', login_url %>

  </div>
</div>